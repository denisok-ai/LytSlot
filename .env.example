# LytSlot Pro - copy to .env and fill
# Database (PostgreSQL + TimescaleDB)
DATABASE_URL=postgresql+asyncpg://lytslot:lytslot@localhost:5432/lytslot
DATABASE_URL_SYNC=postgresql://lytslot:lytslot@localhost:5432/lytslot

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery (если пусто — API работает без фоновых задач, подходит для dev)
# CELERY_BROKER_URL=redis://localhost:6379/0

# JWT (Telegram Login)
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Telegram Bot
BOT_TOKEN=your-bot-token

# API
API_HOST=0.0.0.0
API_PORT=8000

# Режим разработки: вход без Telegram (только для локальной разработки без домена)
# ENABLE_DEV_LOGIN=true

# Админы (telegram_id через запятую). Только эти пользователи могут вызывать /api/admin/*
# ADMIN_TELEGRAM_IDS=123456789

# Frontend (Next.js) — для Telegram Login Widget (в services/web/.env.local)
# NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=LytSlotBot
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe / YooKassa (webhooks)
STRIPE_WEBHOOK_SECRET=
YOOKASSA_SECRET_KEY=
YOOKASSA_SHOP_ID=
